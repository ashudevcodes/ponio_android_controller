<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/gamepadCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardBackgroundColor="#2D2D2D"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <!-- Base layout splits the screen into left and right halves -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- D-Pad -->
                <LinearLayout
                    android:id="@+id/dpadContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDpadUp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:text="↑"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        app:cornerRadius="8dp"
                        app:strokeColor="#4CAF50" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDpadLeft"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:text="←"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            app:cornerRadius="8dp"
                            app:strokeColor="#4CAF50" />

                        <Space
                            android:layout_width="50dp"
                            android:layout_height="50dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDpadRight"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:text="→"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            app:cornerRadius="8dp"
                            app:strokeColor="#4CAF50" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDpadDown"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:text="↓"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        app:cornerRadius="8dp"
                        app:strokeColor="#4CAF50" />
                </LinearLayout>

                <!-- Start and Select -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStart"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:text="START"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="8dp"
                    app:strokeColor="#9E9E9E" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSelect"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|left"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="10dp"
                    android:text="SELECT"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="8dp"
                    app:strokeColor="#9E9E9E" />

                <!-- Shoulder Buttons -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnR1"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_marginTop="90dp"
                    android:layout_marginRight="200dp"
                    android:text="R1"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="8dp"
                    app:strokeColor="#9E9E9E" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnL1"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_marginTop="90dp"
                    android:layout_marginRight="300dp"
                    android:text="L1"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="8dp"
                    app:strokeColor="#9E9E9E" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnL2"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_marginTop="150dp"
                    android:layout_marginRight="300dp"
                    android:text="L2"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="8dp"
                    app:strokeColor="#9E9E9E" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnR2"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_marginTop="150dp"
                    android:layout_marginRight="200dp"
                    android:text="R2"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="8dp"
                    app:strokeColor="#9E9E9E" />

                <!-- Action Buttons -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnB"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="-20dp"
                    android:text="B"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:backgroundTint="#F44336"
                    app:cornerRadius="30dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnA"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="90dp"
                    android:layout_marginBottom="-20dp"
                    android:text="A"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:backgroundTint="#4CAF50"
                    app:cornerRadius="30dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnX"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="160dp"
                    android:layout_marginBottom="80dp"
                    android:text="X"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:backgroundTint="#2196F3"
                    app:cornerRadius="30dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnY"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="160dp"
                    android:layout_marginBottom="12dp"
                    android:text="Y"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:backgroundTint="#FFC107"
                    app:cornerRadius="30dp" />

            </FrameLayout>
        </LinearLayout>

            <!-- LEFT TOUCH AREA (Movement) -->
        <View
            android:id="@+id/leftJoystick"
            android:layout_width="253dp"
            android:layout_height="239dp"
            android:layout_gravity="bottom|left"
            android:layout_marginTop="150dp"
            android:background="@android:color/transparent"
            tools:ignore="RtlHardcoded" />


            <!-- RIGHT TOUCH AREA (Camera) -->
        <View
            android:id="@+id/rightJoystick"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="270dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            tools:ignore="RtlHardcoded" />


        <!-- Overlay buttons and UI controls -->
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
